<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_profile"
    app:startDestination="@id/profileFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="xyz.harmonyapp.olympusblog.ui.main.profile.ProfileFragment"
        android:label="Profiles"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profileFragment_to_viewProfileFragment"
            app:destination="@id/viewProfileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/viewProfileFragment"
        android:name="xyz.harmonyapp.olympusblog.ui.main.profile.ViewProfileFragment"
        android:label="View Profile"
        tools:layout="@layout/fragment_view_profile">


        <action
            android:id="@+id/action_viewProfileFragment_to_home"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:popUpTo="@+id/nav_profile"
            app:popUpToInclusive="true" />

    </fragment>

</navigation>