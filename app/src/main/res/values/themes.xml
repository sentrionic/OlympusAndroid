<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OlympusBlog" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="md_color_button_text">@color/tealDark</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">#333</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/focus_tint_list</item>
        <item name="android:textColorHint">@null</item>
        <item name="hintTextColor">@color/focus_tint_list</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="BlueOutlineButton"
        parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/blue</item>
        <item name="android:textColor">@color/blue</item>
        <item name="textAllCaps">false</item>
        <item name="rippleColor">@color/blue</item>
    </style>
</resources>